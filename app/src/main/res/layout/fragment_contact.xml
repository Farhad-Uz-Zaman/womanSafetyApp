<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout


        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




        <EditText

            android:id="@+id/contact1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:hint="Contact 1"
            android:textColorHint="#ff0000"
            android:layout_marginTop="30dp"


            />
        <EditText
            android:id="@+id/phonenum1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/contact1"
            android:layout_marginRight="40dp"
            android:hint="Phone number"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColorHint="#ff0000"
            android:layout_marginTop="30dp"


            />

        <EditText

            android:id="@+id/contact2"
            android:layout_below="@+id/contact1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:hint="Contact 2"
            android:textColorHint="#ff0000"
            android:layout_marginTop="30dp"


            />

        <EditText
            android:id="@+id/phonenum2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/contact2"
            android:layout_below="@id/contact1"
            android:layout_marginRight="40dp"
            android:hint="Phone number"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColorHint="#ff0000"
            android:layout_marginTop="30dp"


            />

        <EditText

            android:id="@+id/contact3"
            android:layout_below="@+id/contact2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:hint="Contact 3"
            android:textColorHint="#ff0000"
            android:layout_marginTop="30dp"


            />

        <EditText
            android:id="@+id/phonenum3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/contact3"
            android:layout_below="@id/contact2"
            android:layout_marginRight="40dp"
            android:hint="Phone number"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColorHint="#ff0000"
            android:layout_marginTop="30dp"


            />



        <Button


            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:layout_marginTop="70dp"
            android:text="Save"
            android:textSize="24sp"
            android:textColor="#FF0000"


            />


    </RelativeLayout>

</RelativeLayout>