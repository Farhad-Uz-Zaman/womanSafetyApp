<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".contact">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/emergencyContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:gravity="start"
        android:text="Input Names and Numbers"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#505050"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/contact1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emergencyContacts"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:hint="Contact name 1"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_con1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#606060"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/contact1"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_username"
        app:layout_constraintBottom_toBottomOf="@id/contact1"
        app:layout_constraintStart_toStartOf="@id/contact1"/>


    <EditText
        android:id="@+id/phonenum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Phone Number 1"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_phn1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/phonenum1"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@id/phonenum1"
        app:layout_constraintStart_toStartOf="@id/phonenum1"/>

    <EditText
        android:id="@+id/contact2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phonenum1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Contact name 2"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_con2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/contact2"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_username"
        app:layout_constraintBottom_toBottomOf="@id/contact2"
        app:layout_constraintStart_toStartOf="@id/contact2"/>


    <EditText
        android:id="@+id/phonenum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Phone Number 2"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_phn2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/phonenum2"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@id/phonenum2"
        app:layout_constraintStart_toStartOf="@id/phonenum2"/>

    <EditText
        android:id="@+id/contact3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phonenum2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Contact name 2"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_con3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/contact3"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_username"
        app:layout_constraintBottom_toBottomOf="@id/contact3"
        app:layout_constraintStart_toStartOf="@id/contact3"/>


    <EditText
        android:id="@+id/phonenum3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Phone Number 3"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_phn3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/phonenum3"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@id/phonenum3"
        app:layout_constraintStart_toStartOf="@id/phonenum3"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phonenum3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter email to confirm"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingStart="60dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColor="#202020"
        android:background="@null"
        tools:ignore= "Autofill"/>
    <View
        android:id="@+id/view_divider_for_mail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/email"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="@id/email"/>









    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/login_button_bg"
        app:layout_constraintTop_toBottomOf="@+id/view_divider_for_mail"
        android:text="SAVE"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/save"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/gap"/>



</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>