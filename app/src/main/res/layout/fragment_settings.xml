<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:text="Edit info"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#505050"
            app:layout_constraintTop_toTopOf="parent"/>






        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/settings_text"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="#202020"
            android:background="@null"
            tools:ignore= "Autofill"/>
        <View
            android:id="@+id/view_divider_for_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/name"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_username"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"/>


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:hint="User Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="#202020"
            android:background="@null"
            tools:ignore= "Autofill"/>
        <View
            android:id="@+id/view_divider_for_username"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/username"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_name"
            app:layout_constraintBottom_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="@id/username"/>





        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/username"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:hint="Phone"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="#202020"
            android:background="@null"
            tools:ignore= "Autofill"/>
        <View
            android:id="@+id/view_divider_for_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/phone"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_phone"
            app:layout_constraintBottom_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="@id/phone"/>






        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:hint="Address"
            android:imeOptions="actionDone"
            android:inputType="textPostalAddress"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="#202020"
            android:background="@null"
            tools:ignore= "Autofill"/>
        <View
            android:id="@+id/view_divider_for_adress"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/address"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_address"
            app:layout_constraintBottom_toBottomOf="@id/address"
            app:layout_constraintStart_toStartOf="@id/address"/>




    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_button_bg"
        app:layout_constraintTop_toBottomOf="@+id/view_divider_for_adress"
        android:text="Update"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:textStyle="bold"
        />




</androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>